# Alias para los sorters
alias sorter1 d0
alias sorter2 d1
alias sorter3 d2
alias sorter4 d3
alias sorter5 d4
alias sorter6 d5

define lingoteIron HASH("ItemIronIngot")
define lingoteCobre HASH("ItemCopperIngot")
define lingoteOro HASH("ItemGoldIngot")
define lingoteSilicona HASH("ItemSiliconIngot")
define lingoteNikel HASH("ItemNickelIngot")
define lingotePlata HASH("ItemSilverIngot")

sll r0 lingoteIron 8
or r0 r0 SorterInstruction.FilterPrefabHashEquals
put sorter1 0 r0

sll r0 lingoteCobre 8
or r0 r0 SorterInstruction.FilterPrefabHashEquals
put sorter2 0 r0

sll r0 lingoteOro 8
or r0 r0 SorterInstruction.FilterPrefabHashEquals
put sorter3 0 r0

sll r0 lingoteSilicona 8
or r0 r0 SorterInstruction.FilterPrefabHashEquals
put sorter4 0 r0

sll r0 lingoteNikel 8
or r0 r0 SorterInstruction.FilterPrefabHashEquals
put sorter5 0 r0

sll r0 lingotePlata 8
or r0 r0 SorterInstruction.FilterPrefabHashEquals
put sorter6 0 r0

s db Setting 1
